{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "../lib/kmake",
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"baseUrl": "src",
		"paths": {
			"kmake/*": ["./*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"node_modules/@types/**/*.ts"
	],
	"exclude": [
		"src/@types/**/*.ts"
	],
	"compileOnSave": true
}
